{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container">
        <h1 class="text-center mt-5">{{ category.name }}</h1>
        <div>
            {% for game in category.games %}
               <a href="{{ path('app_show_game', {id: game.id}) }}"><span>{{ game.title }}</span></a>
               <p class="mt-3">{{ game.description }}</p>
               <p>{{ game.content }}</p>

                {% endfor %}
        </div>
    </div>
{% endblock %}