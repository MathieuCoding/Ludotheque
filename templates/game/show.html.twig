{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container">
        <img src="{{ asset('uploads/' ~ game.picture) }}" alt="{{ game.title }}" class="rounded mx-auto d-block mt-5">
        <h1 class="text-center mt-5">{{ game.title }}</h1>
        <div>
            {% for cat in game.categories %}
               <a href="{{ path('app_show_category', {id: cat.id}) }}"><span class="badge text-bg-success">{{ cat.name }}</span></a>
                {% endfor %}
        </div>
        <p class="mt-3">{{ game.description|raw }}</p>
        <p>{{ game.content|raw }}</p>
    </div>
{% endblock %}